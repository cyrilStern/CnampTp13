<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:wear="http://schemas.android.com/apk/res-auto">
    <android.support.wearable.view.CircledImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circledimageview"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/watchonhand"
        wear:circle_radius="70dp"
        wear:circle_color="#ffffff"
        wear:circle_border_color="#00cc99"
        wear:circle_border_width="10dp" />
</RelativeLayout>
